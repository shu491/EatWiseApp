<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="CENTER" prefWidth="600.0" spacing="20" styleClass="anchor-pane" stylesheets="@EatWiseApp.CSS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eatwise.view.UserProfileController">
   <Label styleClass="app-text" text="User Profile: ">
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin></Label>
   <Circle fx:id="profileCircle" radius="34.0" stroke="TRANSPARENT" strokeType="INSIDE" />

    <Label styleClass="app-text" text="Username:" />
    <Label fx:id="usernameLabel" styleClass="label-text" />

    <Label styleClass="app-text" text="Current Password:" />
    <Label fx:id="passwordLabel" styleClass="label-text" />

    <Label styleClass="app-text" text="New Password:" />
    <PasswordField fx:id="newPasswordField" maxHeight="30.0" maxWidth="200.0" minHeight="40.0" minWidth="200.0" prefHeight="26.0" prefWidth="433.0" promptText="Enter new password..." />

    <Button defaultButton="true" onAction="#handleUpdatePassword" text="Update Password" />

    <Label fx:id="statusLabel" styleClass="statusLabel" />

    <Button cancelButton="true" onAction="#handleBack" text="Back">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="20.0" />
      </padding></Button>
</VBox>
