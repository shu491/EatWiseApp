<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="700.0" minHeight="500.0" prefHeight="500" prefWidth="600" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nutritrack.view.BudgetMealPlannerController">

    <Label text="Let's select foods based on Your Budget!">
        <padding>
            <Insets top="10.0" />
        </padding>
    </Label>

    <!-- Budget Input -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Enter Meal Budget:" />
        <Label text="RM" />
        <TextField fx:id="budgetField" promptText="e.g. 20.00" />
        <Button onAction="#handleGeneratePlan" text="Generate Meals" />
    </HBox>

    <!-- Meals Label -->
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Meals:" />

    <!-- Meals Grid inside ScrollPane -->
    <ScrollPane fitToWidth="true" maxHeight="150.0" minHeight="150.0" prefHeight="150.0">
        <content>
            <TilePane fx:id="mealsPane" alignment="CENTER" hgap="15" prefColumns="3" style="-fx-padding: 10;" vgap="15" />
        </content>
    </ScrollPane>

    <!-- Selected Meal Info -->
    <Label text="Select a meal to see details:" />
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="selectedMealNameLabel" text="Name" />
        <Label text="Price (RM):" />
        <TextField fx:id="manualPriceField" promptText="System price shown here" />
    </HBox>

    <!-- Nutrition Info -->
    <HBox alignment="CENTER" spacing="30">
        <VBox alignment="CENTER">
            <Label text="Calories" />
            <Label fx:id="caloriesLabel" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Protein" />
            <Label fx:id="proteinLabel" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Fat" />
            <Label fx:id="fatLabel" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Saturated Fat" />
            <Label fx:id="satFatLabel" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Fiber" />
            <Label fx:id="fiberLabel" />
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Carbs" />
            <Label fx:id="carbsLabel" />
        </VBox>
    </HBox>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#handleConfirmMeal" text="Confirm Meal" />
        <Button onAction="#handleBack" text="Back" />
    </HBox>

    <!-- Alert Label -->
    <Label fx:id="alertLabel" text="" />
</VBox>
